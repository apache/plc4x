      </incoming-plc-message>
      <api-response name="Report Read Response to application (expedited)">
        <PlcReadResponse>
          <PlcReadRequest>
            <tags>
              <expeditedSdo>
                <CANOpenSDOTag>
                  <node dataType="int" bitLength="64">1</node>
                  <index dataType="int" bitLength="64">1000</index>
                  <subIndex dataType="int" bitLength="64">22</subIndex>
                  <dataType dataType="string" bitLength="80" encoding="UTF-8">UNSIGNED32</dataType>
                </CANOpenSDOTag>
              </expeditedSdo>
            </tags>
          </PlcReadRequest>
          <values>
            <expeditedSdo>
              <ResponseItem>
                <result dataType="string" bitLength="16" encoding="UTF-8">OK</result>
                <PlcUDINT dataType="int" bitLength="32">1717859169</PlcUDINT>
              </ResponseItem>
            </expeditedSdo>
          </values>
        </PlcReadResponse>
      </api-response>
      <delay>1000</delay>
    </steps>
  </testcase>

