                      <data dataType="byte" bitLength="32">0x61736466</data>
                      <padding isList="true">
                        <value dataType="uint" bitLength="8">0</value>
                        <value dataType="uint" bitLength="8">0</value>
                        <value dataType="uint" bitLength="8">0</value>
                      </padding>
