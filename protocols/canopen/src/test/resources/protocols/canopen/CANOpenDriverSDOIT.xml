  <testcase>
    <name>Expedited SDO read request</name>
    <description>
      Single tags read request which answers with 4 bytes of data.
    </description>
    <steps>
      <api-request name="Receive Read Request from application">
        <TestReadRequest>
          <tags>
            <tag className="org.apache.plc4x.test.driver.internal.api.TestTag">
              <name>expeditedSdo</name>
              <address>SDO:1:1000/22:UNSIGNED32</address>
            </tag>
          </tags>
        </TestReadRequest>
      </api-request>
      <outgoing-plc-message name="Send SDO Initialize Upload Request">
        <CANOpenFrame>
          <nodeId dataType="uint" bitLength="8">1</nodeId>
          <service>
            <CANOpenService dataType="uint" bitLength="4" stringRepresentation="RECEIVE_SDO">12</CANOpenService>
          </service>
          <alignment dataType="uint" bitLength="4">0</alignment>
          <payload>
            <CANOpenPayload>
              <CANOpenSDORequest>
                <command>
                  <SDORequestCommand dataType="uint" bitLength="3" stringRepresentation="INITIATE_UPLOAD">2</SDORequestCommand>
                </command>
                <request>
                  <SDORequest>
                    <SDOInitiateUploadRequest>
                      <reserved dataType="uint" bitLength="5">0</reserved>
                      <address>
                        <IndexAddress>
                          <index dataType="uint" bitLength="16">1000</index>
                          <subindex dataType="uint" bitLength="8">22</subindex>
                        </IndexAddress>
                      </address>
                      <reserved dataType="int" bitLength="32">0</reserved>
                    </SDOInitiateUploadRequest>
                  </SDORequest>
                </request>
              </CANOpenSDORequest>
            </CANOpenPayload>
          </payload>
          <padding isList="true">
          </padding>
        </CANOpenFrame>
      </outgoing-plc-message>
      <incoming-plc-message name="Receive SDO Initialize Upload Response for other node">
        <CANOpenFrame>
          <nodeId dataType="uint" bitLength="8">1</nodeId>
          <service>
            <CANOpenService dataType="uint" bitLength="4" stringRepresentation="TRANSMIT_SDO">11</CANOpenService>
          </service>
          <alignment dataType="uint" bitLength="4">0</alignment>
          <payload>
            <CANOpenPayload>
              <CANOpenSDOResponse>
                <command>
                  <SDOResponseCommand dataType="uint" bitLength="3" stringRepresentation="INITIATE_UPLOAD">2</SDOResponseCommand>
                </command>
                <response>
                  <SDOResponse>
                    <SDOInitiateUploadResponse>
                      <reserved dataType="uint" bitLength="1">0</reserved>
                      <size dataType="uint" bitLength="2">0</size>
                      <expedited dataType="bit" bitLength="1">true</expedited>
                      <indicated dataType="bit" bitLength="1">true</indicated>
                      <address>
                        <IndexAddress>
                          <index dataType="uint" bitLength="16">1001</index>
                          <subindex dataType="uint" bitLength="8">22</subindex>
                        </IndexAddress>
                      </address>
                      <payload>
                        <SDOInitiateUploadResponsePayload>
                          <SDOInitiateExpeditedUploadResponse>
                            <data dataType="byte" bitLength="32">0x61736466</data>
                            <padding isList="true">
                            </padding>
                          </SDOInitiateExpeditedUploadResponse>
                        </SDOInitiateUploadResponsePayload>
                      </payload>
                    </SDOInitiateUploadResponse>
                  </SDOResponse>
                </response>
              </CANOpenSDOResponse>
            </CANOpenPayload>
          </payload>
          <padding isList="true">
          </padding>
        </CANOpenFrame>
      </incoming-plc-message>
      <incoming-plc-message name="Receive SDO Initialize Upload Response for from requested node">
        <CANOpenFrame>
          <nodeId dataType="uint" bitLength="8">1</nodeId>
          <service>
            <CANOpenService dataType="uint" bitLength="4" stringRepresentation="TRANSMIT_SDO">11</CANOpenService>
          </service>
          <alignment dataType="uint" bitLength="4">0</alignment>
          <payload>
            <CANOpenPayload>
              <CANOpenSDOResponse>
                <command>
                  <SDOResponseCommand dataType="uint" bitLength="3" stringRepresentation="INITIATE_UPLOAD">2</SDOResponseCommand>
                </command>
                <response>
                  <SDOResponse>
                    <SDOInitiateUploadResponse>
                      <reserved dataType="uint" bitLength="1">0</reserved>
                      <size dataType="uint" bitLength="2">0</size>
                      <expedited dataType="bit" bitLength="1">true</expedited>
                      <indicated dataType="bit" bitLength="1">true</indicated>
                      <address>
                        <IndexAddress>
                          <index dataType="uint" bitLength="16">1000</index>
                          <subindex dataType="uint" bitLength="8">22</subindex>
                        </IndexAddress>
                      </address>
                      <payload>
                        <SDOInitiateUploadResponsePayload>
                          <SDOInitiateExpeditedUploadResponse>
                            <data dataType="byte" bitLength="32">0x61736466</data>
                            <padding isList="true">
                            </padding>
                          </SDOInitiateExpeditedUploadResponse>
                        </SDOInitiateUploadResponsePayload>
                      </payload>
                    </SDOInitiateUploadResponse>
                  </SDOResponse>
