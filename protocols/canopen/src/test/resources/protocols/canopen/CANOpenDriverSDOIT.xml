  <testcase>
    <name>Segmented SDO read request</name>
    <description>
      Single tag read request which answers with 8 bytes of data which must go over two CAN frames.
    </description>
    <steps>
      <api-request name="Receive Read Request from application">
        <TestReadRequest>
          <tags>
            <tag className="org.apache.plc4x.test.driver.internal.api.TestTag">
              <name>segmentedSdo</name>
              <address>SDO:2:2000/44:RECORD</address>
            </tag>
          </tags>
        </TestReadRequest>
      </api-request>

      <outgoing-plc-message name="Send SDO Initialize Upload Request">
        <CANOpenFrame>
          <nodeId dataType="uint" bitLength="8">2</nodeId>
          <service>
            <CANOpenService dataType="uint" bitLength="4" stringRepresentation="RECEIVE_SDO">12</CANOpenService>
          </service>
          <alignment dataType="uint" bitLength="4">0</alignment>
          <payload>
            <CANOpenPayload>
              <CANOpenSDORequest>
                <command>
                  <SDORequestCommand dataType="uint" bitLength="3" stringRepresentation="INITIATE_UPLOAD">2</SDORequestCommand>
                </command>
                <request>
                  <SDORequest>
                    <SDOInitiateUploadRequest>
                      <reserved dataType="uint" bitLength="5">0</reserved>
                      <address>
                        <IndexAddress>
                          <index dataType="uint" bitLength="16">2000</index>
                          <subindex dataType="uint" bitLength="8">44</subindex>
                        </IndexAddress>
                      </address>
                      <reserved dataType="int" bitLength="32">0</reserved>
                    </SDOInitiateUploadRequest>
                  </SDORequest>
                </request>
              </CANOpenSDORequest>
            </CANOpenPayload>
          </payload>
          <padding isList="true">
          </padding>
        </CANOpenFrame>
      </outgoing-plc-message>
      <incoming-plc-message name="Receive SDO Initialize Upload Response with segment information">
        <CANOpenFrame>
          <nodeId dataType="uint" bitLength="8">2</nodeId>
          <service>
            <CANOpenService dataType="uint" bitLength="4" stringRepresentation="TRANSMIT_SDO">11</CANOpenService>
          </service>
          <alignment dataType="uint" bitLength="4">0</alignment>
          <payload>
            <CANOpenPayload>
              <CANOpenSDOResponse>
                <command>
                  <SDOResponseCommand dataType="uint" bitLength="3" stringRepresentation="INITIATE_UPLOAD">2</SDOResponseCommand>
                </command>
                <response>
                  <SDOResponse>
                    <SDOInitiateUploadResponse>
                      <reserved dataType="uint" bitLength="1">0</reserved>
                      <size dataType="uint" bitLength="2">0</size>
                      <expedited dataType="bit" bitLength="1">false</expedited>
                      <indicated dataType="bit" bitLength="1">true</indicated>
                      <address>
                        <IndexAddress>
                          <index dataType="uint" bitLength="16">2000</index>
                          <subindex dataType="uint" bitLength="8">44</subindex>
                        </IndexAddress>
                      </address>
                      <payload>
                        <SDOInitiateUploadResponsePayload>
                          <SDOInitiateSegmentedUploadResponse>
                            <bytes dataType="uint" bitLength="32">8</bytes>
                          </SDOInitiateSegmentedUploadResponse>
                        </SDOInitiateUploadResponsePayload>
                      </payload>
                    </SDOInitiateUploadResponse>
                  </SDOResponse>
                </response>
              </CANOpenSDOResponse>
            </CANOpenPayload>
          </payload>
          <padding isList="true">
          </padding>
        </CANOpenFrame>
      </incoming-plc-message>

      <outgoing-plc-message name="Send first SDO Segment Request">
        <CANOpenFrame>
          <nodeId dataType="uint" bitLength="8">2</nodeId>
          <service>
            <CANOpenService dataType="uint" bitLength="4" stringRepresentation="RECEIVE_SDO">12</CANOpenService>
          </service>
          <alignment dataType="uint" bitLength="4">0</alignment>
          <payload>
            <CANOpenPayload>
              <CANOpenSDORequest>
                <command>
                  <SDORequestCommand dataType="uint" bitLength="3" stringRepresentation="SEGMENT_UPLOAD">3</SDORequestCommand>
                </command>
                <request>
                  <SDORequest>
                    <SDOSegmentUploadRequest>
                      <toggle dataType="bit" bitLength="1">false</toggle>
                      <reserved dataType="uint" bitLength="4">0</reserved>
                      <reserved dataType="int" bitLength="56">0</reserved>
                    </SDOSegmentUploadRequest>
                  </SDORequest>
                </request>
              </CANOpenSDORequest>
            </CANOpenPayload>
          </payload>
          <padding isList="true">
          </padding>
        </CANOpenFrame>
      </outgoing-plc-message>
      <incoming-plc-message name="Receive SDO Initialize Upload Response for first segment">
        <CANOpenFrame>
          <nodeId dataType="uint" bitLength="8">2</nodeId>
          <service>
            <CANOpenService dataType="uint" bitLength="4" stringRepresentation="TRANSMIT_SDO">11</CANOpenService>
          </service>
          <alignment dataType="uint" bitLength="4">0</alignment>
          <payload>
            <CANOpenPayload>
              <CANOpenSDOResponse>
                <command>
                  <SDOResponseCommand dataType="uint" bitLength="3" stringRepresentation="SEGMENT_UPLOAD">0</SDOResponseCommand>
