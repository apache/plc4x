          <PlcReadRequest>
            <fields>
              <TheFailingField>
                <CANOpenSDOField>
                  <node>1</node>
                  <index>1000</index>
                  <subIndex>22</subIndex>
                  <dataType>UNSIGNED32</dataType>
                </CANOpenSDOField>
              </TheFailingField>
            </fields>
          </PlcReadRequest>
          <values>
            <TheFailingField result="REMOTE_ERROR">
              <PlcLINT>84082688</PlcLINT>
            </TheFailingField>
          </values>
        </PlcReadResponse>
      </api-response>
      <delay>1000</delay>
    </steps>
  </testcase>

