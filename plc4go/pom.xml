      <plugin>
        <groupId>com.igormaznitsa</groupId>
        <artifactId>mvn-golang-wrapper</artifactId>
        <version>2.3.10</version>
        <extensions>true</extensions>
        <executions>
          <!-- add tools required for generating code, test, etc-->
          <execution>
            <id>get-stringer</id>
            <phase>initialize</phase>
            <goals>
              <goal>install</goal>
            </goals>
            <configuration>
              <packages>
                <package>golang.org/x/tools/cmd/stringer@${go.stringer.version}</package>
              </packages>
            </configuration>
          </execution>
          <execution>
            <id>get-go-junit-report</id>
            <phase>initialize</phase>
            <goals>
              <goal>install</goal>
            </goals>
            <configuration>
              <packages>
                <!-- use fork till https://github.com/jstemmer/go-junit-report/pull/162 is merged-->
                <package>github.com/sruehl/go-junit-report/v2@${go.junit-report.version}</package>
              </packages>
            </configuration>
          </execution>
          <execution>
            <id>get-gotestsum</id>
            <phase>initialize</phase>
            <goals>
              <goal>install</goal>
            </goals>
            <configuration>
              <packages>
                <package>gotest.tools/gotestsum@${go.gotestsum.version}</package>
              </packages>
            </configuration>
          </execution>
          <execution>
            <id>get-mockery</id>
            <phase>initialize</phase>
            <goals>
              <goal>install</goal>
            </goals>
            <configuration>
              <packages>
                <package>github.com/vektra/mockery/v2@${go.mockery.version}</package>
              </packages>
            </configuration>
          </execution>
          <execution>
            <id>get-goimports-reviser</id>
            <phase>initialize</phase>
            <goals>
              <goal>install</goal>
            </goals>
            <configuration>
              <packages>
                <package>github.com/incu6us/goimports-reviser/v3@latest</package>
              </packages>
            </configuration>
          </execution>
          <execution>
            <id>get-plc4xGenerator</id>
            <phase>initialize</phase>
            <goals>
              <goal>install</goal>
            </goals>
            <configuration>
              <packages>
                <package>./tools/plc4xGenerator</package>
              </packages>
            </configuration>
          </execution>
          <execution>
            <id>get-plc4xLicencer</id>
            <phase>initialize</phase>
            <goals>
              <goal>install</goal>
            </goals>
            <configuration>
              <packages>
                <package>./tools/plc4xLicencer</package>
              </packages>
            </configuration>
          </execution>

          <!-- Run the go code-generation -->
          <execution>
            <id>default-generate</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <packages>
                <!-- We want to format every package here, so we don't get dirty commits -->
                <package>./...</package>
              </packages>
            </configuration>
          </execution>

          <!-- Generate mocks-->
          <execution>
            <id>generate-mocks</id>
            <phase>process-sources</phase>
            <goals>
              <goal>custom</goal>
            </goals>
            <configuration>
              <exec>mockery</exec>
              <customCommand>--log-level</customCommand>
              <packages>
                <package>info</package>
              </packages>
            </configuration>
          </execution>

          <!-- Processes code that uses old APIs and rewrites them use newer ones -->
          <!--
            REMARK: The default lifecycle defines this is run in the "validate" phase,
            we redefine it to run in the process-sources so it also processes generated code.
          -->
          <execution>
            <id>default-fix</id>
            <phase>process-sources</phase>
            <goals>
              <goal>fix</goal>
            </goals>
          </execution>

          <!-- Format the codebase correctly (this mainly has an effect on generated code) -->
          <execution>
            <id>default-fmt</id>
            <phase>process-sources</phase>
            <goals>
              <goal>fmt</goal>
            </goals>
            <configuration>
              <packages>
                <!-- We want to format every package here so we don't get dirty commits -->
                <package>./...</package>
              </packages>
            </configuration>
          </execution>

          <!-- Get all dependencies for test cases -->
          <execution>
            <id>get-test-dependencies</id>
            <phase>generate-test-sources</phase>
            <goals>
              <goal>get</goal>
            </goals>
            <configuration>
              <buildFlags>
                <flag>-t</flag>
              </buildFlags>
              <packages>
                <package>./...</package>
              </packages>
            </configuration>
          </execution>

          <!-- Disabling the default binding, because we're running a custom version after this -->
          <execution>
            <id>default-test</id>
            <phase>test</phase>
            <goals>
              <goal>test</goal>
            </goals>
            <configuration>
              <skip>true</skip>
            </configuration>
          </execution>

          <execution>
            <id>test</id>
            <phase>test</phase>
            <goals>
              <goal>custom</goal>
            </goals>
            <configuration>
              <skip>${skipTests}</skip>
              <exec>gotestsum</exec>
              <customCommand>--junitfile</customCommand>
              <buildFlags>
                <flag>target/surefire-reports/go-junit-report.xml</flag>
                <flag>--</flag>
                <flag>${go.cover.flag}</flag>
              </buildFlags>
              <packages>
                <package>./...</package>
              </packages>
            </configuration>
          </execution>

          <!-- Format (group) imports -->
          <execution>
            <id>fix-imports-internal</id>
            <phase>process-sources</phase>
            <goals>
              <goal>custom</goal>
            </goals>
            <configuration>
              <exec>goimports-reviser</exec>
              <customCommand>-excludes</customCommand>
              <packages>
                <package>.idea,.git</package>
                <package>./...</package>
              </packages>
            </configuration>
          </execution>

          <execution>
            <id>run-go-vet</id>
            <phase>verify</phase>
            <goals>
              <goal>vet</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <packages>
            <package>github.com/apache/plc4x/plc4go/pkg/api</package>
          </packages>
          <sources>${project.basedir}</sources>
          <verbose>true</verbose>
          <goVersion>${go.version}</goVersion>
        </configuration>
      </plugin>

      <!-- Ensure we don't deploy anything -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>

