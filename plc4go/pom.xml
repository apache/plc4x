    <go.stringer.version>v0.24.0</go.stringer.version>
    <go.junit-report.version>v2.1.0</go.junit-report.version>
    <go.gotestsum.version>v1.12.0</go.gotestsum.version>
    <go.mockery.version>v2.45.0</go.mockery.version>
  </properties>

